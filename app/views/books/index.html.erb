   <div class="success">
   <%=   flash[:success]  %>
   </div>
   <table>
        <thead>
        <h1 class="books">Books</h1>
            <div class="books-top">
                <tr>
                <th class="title">Title</th>
                <th class="body">Body</th>
                <th class="system"></th>
                </tr>
            </div>
        </thead>
        <tbody>
                    <% @books.each do |book| %>
            <tr class="show">
                    <td class="t-title"><%= book.title %></td>
                    <td class="t-body"><%= book.body %></td>
                    <td class="t-show"><%= link_to "Show",book_path(book.id) %></td>
                    <td class="t-edit"><%= link_to "Edit",edit_book_path(book.id) %></td>
                    <td class="t-destroy"><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm"=> "Are you sure?" %></td>
            </tr>
                    <% end %>
        </tbody>
    </table>
    <h2 class="new-book">New book</h2>
    <div class="error">
    <% if @book.errors.any? %>
     <div class="text-error">
     <%= @book.errors.count %> errors prohibited this book from being saved:
     </div>
     <ul class="error-message">
         <% @book.errors.full_messages.each do|message| %>
         <li><%= message %></li>
         <% end %>
     </ul>
     <% end %>
    </div>

         <div class="text">
            <%= form_with model:@book,url:'/books',method: :post do |f| %>
            <div class="new-title">
                <h4>Title</h4>
                <%= f.text_field:title %>
            </div>
            <div class="new-body">
                <h4>Body</h4>
                <%= f.text_area:body %>
            </div>
            <div class="new-create">
                <%= f.submit 'Create Book' %>
            </div>
            <% end %>
         </div>
